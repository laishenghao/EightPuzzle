<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BackgroundText">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorBackgroundTheme</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorTextBg</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="ForegroundText">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorForegroundTheme</item>
        <item name="android:background">@drawable/bg_fore_numbers</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="MenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorForegroundTheme</item>
        <item name="android:background">@drawable/menu_text_bg</item>
        <item name="android:padding">15dp</item>
    </style>
</resources>
